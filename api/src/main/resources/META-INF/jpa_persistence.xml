<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
	<!-- Keep this file empty, Spring will scan the @Entity classes -->
	<persistence-unit name="defaultPU" transaction-type="RESOURCE_LOCAL">
        <properties>
           <property name="hibernate.ejb.event.pre-insert"  value="com.ainia.ecgApi.persistence.HibernateListener"/>
           <property name="hibernate.ejb.event.post-update" value="com.ainia.ecgApi.persistence.HibernateListener"/>
           <property name="hibernate.ejb.event.post-delete" value="com.ainia.ecgApi.persistence.HibernateListener"/> 
        </properties>
	</persistence-unit>
</persistence>